@model Books
@{
    ViewData["Title"] = "Search Page";
}

<section class="container mt-4">
    <h4>Check out for Book in Our store</h4>
    <div class="col-md-6 mt-5">
        <form asp-controller="home" asp-action="DisplayBook">
            <div class="form-group">
                <input type="text" class="form-control" id="check" placeholder="Enter Book Title" asp-for="Title" />
            </div>
            <div class="form-group">
                <input type="submit"  class="form-control btn btn-outline-success btn-block"  value="Search Book" />
            </div>

        </form>
    </div>
</section>
